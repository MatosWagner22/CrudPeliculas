@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Eliminar Película";
}

<h1>Eliminar Película</h1>

<form method="post">
    <div>
        <h4>Pelicula</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Título</dt>
            <dd class="col-sm-10">@Model.Pelicula.Titulo</dd>
            <dt class="col-sm-2">Director</dt>
            <dd class="col-sm-10">@Model.Pelicula.Director</dd>
            <dt class="col-sm-2">Fecha de Estreno</dt>
            <dd class="col-sm-10">@Model.Pelicula.FechaEstreno.ToShortDateString()</dd>
        </dl>
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancelar</a>
    </div>
</form>
