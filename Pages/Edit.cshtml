@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Editar Película";
}
<h1>Editar Película</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Pelicula.Titulo" class="control-label"></label>
        <input asp-for="Pelicula.Titulo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pelicula.Director" class="control-label"></label>
        <input asp-for="Pelicula.Director" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pelicula.Descripcion" class="control-label">Descripción</label>
        <textarea asp-for="Pelicula.Descripcion" class="form-control" rows="4"></textarea>
    </div>
    <div class="form-group">
        <label class="control-label">¿Es Estreno?</label><br />
        <label>
            <input type="radio" asp-for="Pelicula.EsEstreno" value="true" />
            Sí
        </label>
        <label>
            <input type="radio" asp-for="Pelicula.EsEstreno" value="false" />
            No
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Pelicula.Genero" class="control-label">Género</label>
        <select asp-for="Pelicula.Genero" class="form-control">
            <option value="">Seleccione un género</option>
            <option value="Acción">Acción</option>
            <option value="Comedia">Comedia</option>
            <option value="Drama">Drama</option>
            <option value="Terror">Terror</option>
            <option value="Ciencia Ficción">Ciencia Ficción</option>
        </select>
    </div>
    <div class="form-group">
        <label>
            <input type="checkbox" asp-for="Pelicula.EsAnimada" />
            ¿Es Animada?
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Pelicula.FechaEstreno" class="control-label"></label>
        <input asp-for="Pelicula.FechaEstreno" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pelicula.UrlVideo" class="control-label">URL del Video de YouTube</label>
        <input asp-for="Pelicula.UrlVideo" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>
